  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "preLaunchTask": "tsc-watch",
      "port": 9222,
      "restart": true,
      "runtimeExecutable": "npm",
      "args": ["run", "debug"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "internalConsole"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "preLaunchTask": "tsc-watch",
      "port": 9222,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/server",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
